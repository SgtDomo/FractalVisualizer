<Window x:Class="FractalVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FractalVisualizer"
        mc:Ignorable="d"
        Title="MainWindow"
        KeyDown="Window_OnKeyDown"
        Background="Black">
    <DockPanel>
        <Menu DockPanel.Dock="Top" Background="Black" Foreground="Blue">
            <MenuItem Header="File">
                <MenuItem Header="Copy To Clipboard" Click="CopyToClickBoard_Click" Foreground="Black"></MenuItem>
                <MenuItem Header="Image Export" Click="ImageExport_OnClick" Foreground="Black"/>
                <MenuItem Header="Gif Export" Click="GifExport_OnClick" Foreground="Black"/>
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Settings" Click="SettingsMenuItems_Click" Foreground="Black"/>
                <MenuItem Header="Time Statistics" Click="TimeStatistics_Click" Foreground="Black" />
                <MenuItem Header="Choose Fractal" Click="ChooseFractal_Click" Foreground="Black" />
                <MenuItem Header="Help" Click="Help_Click" Foreground="Black" />
            </MenuItem>
        </Menu>
        <local:Displayer x:Name="Displayer"></local:Displayer>
    </DockPanel>
</Window>
