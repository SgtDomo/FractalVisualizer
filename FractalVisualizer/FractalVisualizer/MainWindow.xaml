<Window x:Class="FractalVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FractalVisualizer"
        mc:Ignorable="d"
        Title="MainWindow"
        KeyDown="Window_OnKeyDown"
        Background="Black">
    <Window.CommandBindings>
        <CommandBinding Command="Copy" Executed="CopyToClickBoard_Click"/>
        <CommandBinding Command="Help" Executed="Help_Click"/>
        <CommandBinding Command="Save" Executed="ImageExport_OnClick"/>
        <CommandBinding Command="local:CustomCommands.GifExport" Executed="GifExport_OnClick"/>
        <CommandBinding Command="local:CustomCommands.ConstantRotationExport" Executed="ConstantRotationExport_OnClick"/>
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Key="E" Modifiers="Control" Command="local:CustomCommands.GifExport" Gesture="Ctrl+E"></KeyBinding>
        <KeyBinding Key="J" Modifiers="Control" Command="local:CustomCommands.ConstantRotationExport" Gesture="Ctrl+J"></KeyBinding>
    </Window.InputBindings>
    <DockPanel>
        <Menu DockPanel.Dock="Top" Background="Black" Foreground="White">
            <MenuItem Header="File">
                <MenuItem Command="Copy" Header="Copy To Clipboard" Click="CopyToClickBoard_Click" Foreground="Black"></MenuItem>
                <MenuItem Command="Save" Header="Image Export" Foreground="Black"/>
                <MenuItem Command="local:CustomCommands.GifExport" Header="Gif Export" Foreground="Black" InputGestureText="Ctrl+E"/>
                <MenuItem Command="local:CustomCommands.ConstantRotationExport" Header="Constant Rotation Export" Foreground="Black" InputGestureText="Ctrl+J"/>
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Choose Fractal" Click="ChooseFractal_Click" Foreground="Black"  />
                <MenuItem Header="Settings" Click="SettingsMenuItems_Click" Foreground="Black"/>
                <MenuItem Header="Time Statistics" Click="TimeStatistics_Click" Foreground="Black" />
                <MenuItem Command="Help" Foreground="Black" />
            </MenuItem>
        </Menu>
        <local:Displayer x:Name="Displayer"></local:Displayer>
    </DockPanel>
</Window>
